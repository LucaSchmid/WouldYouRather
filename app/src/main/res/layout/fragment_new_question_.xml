<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newQuestion_Fragment">

    <EditText
        android:id="@+id/EditText1"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/background_edittext_question1"
        android:hint="would you rather" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/EditText1"
        android:textSize="24dp"
        android:text="or" />
    <EditText
        android:id="@+id/EditText2"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"
        android:background="@drawable/background_edittext_question2"
        android:hint="would you rather"/>
    <Button
        android:id="@+id/ButtonAddQuestion"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="ASK QUESTION"
        android:layout_below="@+id/EditText2" />
    <Button
        android:id="@+id/ButtonRefresh"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="L"
        android:layout_toRightOf="@+id/ButtonAddQuestion"
        android:layout_below="@+id/EditText2"/>
    <TextView
        android:id="@+id/textViewCheckConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ButtonAddQuestion"
        android:textSize="20dp"
        android:text="no Connection" />

</RelativeLayout>